<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding">
    <ImageView
        android:id="@+id/hobby_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/md_theme_light_primaryInverse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>
    <TextView
        android:id="@+id/item_hobby_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        tools:text="@string/suggest_new_hobby"
        android:background="@color/white_70"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_hobby_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/hobby_img"
        app:layout_constraintTop_toTopOf="@id/hobby_img" />

</androidx.constraintlayout.widget.ConstraintLayout>